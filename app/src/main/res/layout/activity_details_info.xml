<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_details_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.venus.app.wevy.DetailsInfoActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_a_cv1">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical">
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Type"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Devoir"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/details_a_type"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enregistré le"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="17-06-2017 (Mar.)"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/details_a_enreg"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Echeance"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="21-06-2017 (Jeu.)"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/details_a_echeance"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Auteur"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Arnold"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/details_a_auteur"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:text="Description"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/short_lorem_ipsum"
                            android:textColor="@color/colorBlack"
                            android:autoLink="all"
                            android:id="@+id/details_a_description"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@+id/details_a_cv1"
                    android:id="@+id/details_a_cv2">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:orientation="vertical">
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:text="Discussions liées"
                            android:textColor="@color/colorAccent"/>
                    <ProgressBar
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            style="@style/Widget.AppCompat.ProgressBar"
                            android:indeterminate="true"
                            android:id="@+id/progressBar"/>
                    <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_horizontal"
                            android:visibility="gone"
                            android:text="Aucune discussion"
                            android:id="@+id/details_a_no_discussion"/>
                    <android.support.v7.widget.ListViewCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_discussion"
                            android:id="@+id/details_a_listview"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_below="@+id/details_a_cv2"/>
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message_white_36dp"
            app:backgroundTint="@color/colorPrimary"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|end"
            android:id="@+id/details_a_fab"/>
</android.support.design.widget.CoordinatorLayout>
